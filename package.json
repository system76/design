{
  "name": "@system76/design",
  "version": "0.0.0-development",
  "description": "System76 styles and design related web assets",
  "author": "System76 <hosting@system76.com> (https://system76.com)",
  "license": "MIT",
  "main": "dist/index.common.js",
  "web": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "jsnext:main": "dist/index.esm.js",
  "unpkg": "dist/index.umd.js",
  "source": "src/index.js",
  "style": "dist/index.esm.css",
  "scripts": {
    "start": "start-storybook -c config/storybook",
    "build": "npm run build:theo && npm run build:library && npm run build:storybook",
    "build:library": "NODE_ENV=production rollup -c",
    "build:storybook": "build-storybook -c config/storybook -o docs",
    "build:theo": "theo ./src/tokens/index.yaml --transform web --format custom-properties.css,module.js --dest ./src/tokens",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "commit": "git-cz",
    "release": "semantic-release"
  },
  "homepage": "https://system76.github.io/web-design/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/system76/web-design.git"
  },
  "bugs": {
    "url": "https://github.com/system76/web-design/issues"
  },
  "keywords": [
    "style",
    "guide",
    "frontend",
    "system76"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": [
    "*.css"
  ],
  "engines": {
    "node": ">=8"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@storybook/addon-centered": "^5.1.9",
    "@storybook/addon-knobs": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addon-viewport": "^5.1.9",
    "@storybook/vue": "^5.1.9",
    "@system76/standard": "^1.1.2",
    "@vue/babel-preset-app": "^3.8.0",
    "babel-loader": "^8.0.6",
    "commitizen": "^3.1.1",
    "css-loader": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.6.0",
    "postcss-url": "^8.0.0",
    "rollup": "^1.15.6",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-copy": "^3.0.0",
    "rollup-plugin-css-only": "^1.0.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-plugin-vue": "^5.0.0",
    "semantic-release": "^15.13.16",
    "theo": "^8.1.3",
    "vue": "^2.6.10",
    "vue-loader": "^15.7.0",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.10"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
